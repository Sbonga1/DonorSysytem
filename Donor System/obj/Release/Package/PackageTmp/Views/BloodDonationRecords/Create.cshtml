@model Donor_System.Models.BloodDonationRecord



@{
    ViewBag.Title = "Donation Record";
}
<div class="breadcrumb-bg w3l-inner-page-breadcrumb py-5" style="height:50px ; ">

    <h2 class="title pt-5">Donation Record</h2>
    <ul class="breadcrumbs-custom-path mt-3 text-center" style="height:50px">
        <li><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Donation Record </li>
    </ul>

</div>
<!-- banner bottom shape -->
<div class="position-relative">
    <div class="shape overflow-hidden">
        <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
        </svg>
    </div>
</div>
<!-- banner bottom shape -->
<!-- //w3l-inner-page-breadcrumb-->


<div class="container py-lg-5 py-md-4 py-2">

    <div class="w3ls-heading">
        <h3>@ViewBag.Title</h3>
    </div>
    <div class="row" style="padding-left:100px">
       
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @if (TempData.ContainsKey("DonationRecordFailure"))
            {
                <div class="alert alert-success" id="notification">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    @TempData["DonationRecordFailure"]
                </div>
            }

            <h4>Appointment</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div style="padding-left:15px">Donor Email:</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DonorEmail, new { htmlAttributes = new { @class = "form-control", @style = "width:300px", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.DonorEmail, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div style="padding-left:15px">ID Number:</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IdNumber, new { htmlAttributes = new { @class = "form-control", @style = "width:300px", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.IdNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div style="padding-left:15px">Blood Type:</div>
                <div class="col-md-10">

                    <select name="BloodType" id="BloodType" class="form-control" style="width:300px">
                        <option value="" class="BloodType">---Please Select Blood Type---</option>
                        <option value="A+" class="BloodType">A+</option>
                        <option value="A-" class="BloodType">A-</option>
                        <option value="B+" class="BloodType">B+</option>
                        <option value="B-" class="BloodType">B-</option>
                        <option value="O+" class="BloodType">O+</option>
                        <option value="O-" class="BloodType">O-</option>
                        <option value="AB+" class="BloodType">AB+</option>
                        <option value="AB-" class="BloodType">AB-</option>
                    </select>

                    @Html.ValidationMessageFor(model => model.BloodType, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div style="padding-left:15px">Amount of Blood Donated(litre):</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.amtBloodDonated, new { htmlAttributes = new { @class = "form-control", @style = "width:300px" } })
                    @Html.ValidationMessageFor(model => model.amtBloodDonated, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-primary" style="width:300px" />
                </div>
            </div>
        </div>
        }


    </div>
</div>

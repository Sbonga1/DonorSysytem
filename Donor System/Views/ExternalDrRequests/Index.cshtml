<div class="breadcrumb-bg w3l-inner-page-breadcrumb py-5" style="height:50px ; ">

    <h2 class="title pt-5">Doctor Registration Requests</h2>
    <ul class="breadcrumbs-custom-path mt-3 text-center" style="height:50px">
        <li><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Doctor Registration Requests </li>
    </ul>

</div>
<!-- banner bottom shape -->
<div class="position-relative">
    <div class="shape overflow-hidden">
        <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
        </svg>
    </div>
</div>

<section class="w3l-team">
    <div class="team py-5">
        <div class="container py-lg-5 py-md-4">
            <div class="title-content text-center">
                <h6 class="title-subhny text-center">Registration Requests</h6>
                <h3 class="title-w3l mb-sm-3 text-center">Requests</h3>
            </div>
            <div class="card-container">
                @if (TempData.ContainsKey("ReqApproveSuccess"))
                {
                    <div class="alert alert-success" id="notification">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        @TempData["ReqApproveSuccess"]
                    </div>
                }
                @if (TempData.ContainsKey("ReqApproveFailure"))
                {
                    <div class="alert alert-success" id="notification">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        @TempData["ReqApproveFailure"]
                    </div>
                }
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Surname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {


                    <div class="modal review-modal" data-doctor-id="@item.Id">
                        <div class="modal-content">
                            <div class="modal-header-left">
                                <span class="close">&times;</span>
                                <h2 style="text-align:center">Details</h2>
                            </div>



                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <strong>Doctor Name:</strong>
                                    </div>
                                    <div class="col-md-6">
                                        @item.Name
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <strong>Doctor Surname:</strong>
                                    </div>
                                    <div class="col-md-6">
                                        @item.Surname
                                    </div>
                                </div>



                                <div class="row">
                                    <div class="col-md-6">
                                        <strong>Doctor Email:</strong>
                                    </div>
                                    <div class="col-md-6">
                                        @item.Email
                                    </div>
                                </div>


                                <div class="row">
                                    <div class="col-md-6">
                                        <strong>Doctor Credentials:</strong>
                                    </div>
                                    <div class="col-md-6 ">
                                        <a href="@Url.Action("DownloadPdf", "ExternalDrRequests", new { id = item.Id })">Download PDF</a>
                                    </div>
                                </div>



                            </div>
                            @if (item.Status == "Awaiting Approval")
                            {
                                <div class="modal-footer">

                                    <button class="btn btn-outline-primary" onclick="openDeclineModal('@item.Id')">Decline</button>
                                    <button type="button" class="btn btn_apt space-right" onclick="location.href='@Url.Action(actionName: "ApproveRequest", controllerName: "ExternalDrRequests", routeValues: new { id = item.Id })'"> Approve</button>

                                </div>
                            }

                        </div>
                    </div>

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>

                        <td style="white-space: nowrap;">
                            <div>
                                <button class="btn btn-primary open-reviewModal-btn" data-doctor-id="@item.Id" style="width:110px">Review</button>

                            </div>

                        </td>
                        


                    </tr>
                }
                <div id="reasonModal" class="modal2">

                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Enter Reason for Declining</h5>
                            <span class="close" onclick="closeReasonModal()">&times;</span>
                        </div>
                        <div class="modal-body">
                            <input type="text" id="reasonInput" class="form-control" placeholder="Enter reason here">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" onclick="submitDecline()">Submit</button>
                            <button type="button" class="btn btn-secondary"  onclick="closeReasonModal()">Close</button>
                        </div>
                    </div>
                </div>
            </table>
            </div>
        </div>
    </div>
    
    
</section>
<script>
    var declineId;
    function openDeclineModal(Id) {
        $(".review-modal").hide();
        declineId = Id;
        $('#reasonModal').modal('show');
    }
    function closeReasonModal() {
        $('#reasonModal').hide();
        window.location.href = window.location.href;
    }

    function submitDecline() {
        var reason = $('#reasonInput').val();

        // Perform AJAX request to submit the decline reason
        $.ajax({
            url: '@Url.Action("DeclineRequest", "ExternalDrRequests")',
            type: 'POST',
            data: { id: declineId, reason: reason },
            success: function (result) {
                if (result.hasOwnProperty('message')) {
                    // Handle success response
                    alert(result.message); // Display a success message

                    // Refresh the current page after success
                    location.reload(); // or window.location.href = window.location.href;
                } else if (result.hasOwnProperty('error')) {
                    // Handle error response
                    alert(result.error); // Display an error message
                }
            },
            error: function (xhr, status, error) {
                // Handle AJAX error
                alert("An error occurred: " + error);
            }
        });

        $('#reasonModal').modal('hide');
    }
</script>
<script>
    // Get all the buttons with the class "open-modal-btn"
    var buttons = document.querySelectorAll(".open-reviewModal-btn");

    // Attach click event listeners to each button
    buttons.forEach(function (button) {
        button.addEventListener("click", function () {
            var doctorId = button.getAttribute("data-doctor-id");
            var modal = document.querySelector(".review-modal[data-doctor-id='" + doctorId + "']");
            modal.style.display = "block";
        });
    });

    // Get all the close buttons with the class "close"
    var closeButtons = document.querySelectorAll(".close");

    // Attach click event listeners to each close button
    closeButtons.forEach(function (closeButton) {
        closeButton.addEventListener("click", function () {
            var modal = closeButton.closest(".modal");
            modal.style.display = "none";
        });
    });

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target.classList.contains("modal")) {
            event.target.style.display = "none";
        }
    };

</script>

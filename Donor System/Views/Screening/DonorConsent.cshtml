@model Donor_System.Models.BloodDonationScreening
@{
    ViewBag.Title = "DonorConsent";
}

<div class="breadcrumb-bg w3l-inner-page-breadcrumb py-5" style="height:50px ; ">

    <h2 class="title pt-5">Screening</h2>
    <ul class="breadcrumbs-custom-path mt-3 text-center" style="height:50px">
        <li><a href="@Url.Action("Index","Home")">Home</a></li>
        <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Screening </li>
    </ul>

</div>
<!-- banner bottom shape -->
<div class="position-relative">
    <div class="shape overflow-hidden">
        <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
        </svg>
    </div>
</div>
<!-- banner bottom shape -->
<!-- //w3l-inner-page-breadcrumb-->


<div class="container py-lg-5 py-md-4 py-2">

    <div class="w3ls-heading">
        <h3>@ViewBag.Title</h3>
    </div>
    <div class="row" style="padding-left:100px">
        
        @using (Html.BeginForm("DonorConsent", "Screening", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Donor Consent</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div style="padding-left:15px">Consent To DonateBlood:</div>
                    <div class="col-md-10">
                        <select name="ConsentToDonateBlood" id="consentToDonateBlood" class="form-control">
                            <option value="Yes" class="ConsentToDonateBlood">Yes</option>
                            <option value="No" class="ConsentToDonateBlood">No</option>

                        </select>
                        @Html.ValidationMessageFor(model => model.ConsentToDonateBlood, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div style="padding-left:15px">Consent To Share Health Info:</div>
                    <div class="col-md-10">
                        <select name="ConsentToShareHealthInfo" id="consentToShareHealthInfo" class="form-control">
                            <option value="Yes" class="ConsentToShareHealthInfo">Yes</option>
                            <option value="No" class="ConsentToShareHealthInfo">No</option>

                        </select>
                        @Html.ValidationMessageFor(model => model.ConsentToShareHealthInfo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div style="padding-left:15px"> Donation Date:</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DonationDate, new { htmlAttributes = new { @class = "form-control", @style = "width:300px",@readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.DonationDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                @*<div class="form-group">
                    <div style="padding-left:15px">Donor Signature:</div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DonorSignature, new { htmlAttributes = new { @class = "form-control", @style = "width:300px" } })
                        @Html.ValidationMessageFor(model => model.DonorSignature, "", new { @class = "text-danger" })
                    </div>
                </div>*@

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Finish" class="btn btn-primary" style="width:300px" />
                    </div>
                </div>
            </div>
        }


    </div>
</div>


